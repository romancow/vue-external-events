{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./types",
		"sourceMap": true,
		"experimentalDecorators": true,
		"module": "es6",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		// enable stricter type checking options
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"removeComments": true,
		// this aligns with Vue's browser support
		"target": "es5",
		"outDir": "./es6",
	},
	"include": [
		"./src/**/*"
	]
}
