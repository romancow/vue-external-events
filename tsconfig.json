{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./types",
		"experimentalDecorators": true,
		"module": "ES6",
		"moduleResolution": "node",
		// enable stricter type checking options
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"removeComments": true,
		// this aligns with Vue's browser support
		"target": "es5",
		"outDir": "build",
	},
	"include": [
		"./src/**/*"
	]
}
